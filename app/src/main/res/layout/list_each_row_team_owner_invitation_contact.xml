<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/imageViewProfile"
            android:layout_alignParentStart="true"
            android:textColor="@color/colorWhite"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_person"
            android:tint="@color/colorWhite"
            android:background="@drawable/bg_oval_blue"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/tvContactName"
            android:layout_width="match_parent"
            android:layout_toEndOf="@+id/imageViewProfile"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toStartOf="@+id/btnAddContact"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/imageViewProfile"
            android:layout_toLeftOf="@+id/btnAddContact"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/tvContactNumber"
            android:layout_width="match_parent"
            android:layout_toEndOf="@+id/imageViewProfile"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toStartOf="@+id/btnAddContact"
            android:layout_below="@+id/tvContactName"
            android:layout_toRightOf="@+id/imageViewProfile"
            android:layout_toLeftOf="@+id/btnAddContact"
            android:layout_marginLeft="16dp" />

        <ImageView
            android:id="@+id/btnAddContact"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="5dp"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorWhite"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_add"
            android:tint="@color/colorBlack"
            android:background="@drawable/bg_oval_ash"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDarkAsh" />

</LinearLayout>